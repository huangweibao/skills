<script src="jquery-2.2.1.min.js"></script>
<script>

var picBox = document.getElementsByClassName("item")[0];
var boxWidth = picBox.offsetWidth;
!function move(){

  picBox||(picBox=document.getElementsByClassName("item")[0]);
  var width = picBox.offsetWidth;
  if(width-- >0){
       picBox.style.width = width + "px";
       picBox.style.textIndent = width-boxWidth + "px";
  }else {
       picBox.parentNode.appendChild(picBox);
       picBox.style.width = boxWidth + "px";
       picBox.style.textIndent = 0;
       picBox = null;
  } 
  
  // setTimeout(arguments.callee,10);
  setTimeout(move,10);
}();


</script>
